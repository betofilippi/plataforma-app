# =====================================================================================
# CONFIGURAÇÕES DO BACKEND - ERP NXT PLATAFORMA.APP
# =====================================================================================

# APLICAÇÃO
NODE_ENV=development
PORT=3001
APP_NAME=NXT ERP Backend
APP_VERSION=1.0.0
APP_URL=http://localhost:3001

# BANCO DE DADOS POSTGRESQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=erp_nxt_dev
DB_NAME_TEST=erp_nxt_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# REDIS (CACHE E SESSÕES)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT AUTHENTICATION
JWT_SECRET=sua_chave_jwt_super_secreta_aqui
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=sua_chave_refresh_jwt_aqui
JWT_REFRESH_EXPIRES_IN=7d

# SUPABASE (INTEGRAÇÃO PRINCIPAL)
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua_chave_anonima_supabase
SUPABASE_SERVICE_ROLE_KEY=sua_chave_service_role_supabase

# MERCADO LIVRE INTEGRATION
ML_APP_ID=seu_app_id_mercadolivre
ML_CLIENT_SECRET=seu_client_secret_mercadolivre
ML_REDIRECT_URI=https://plataforma.app/oauth/mercadolivre/callback
ML_ACCESS_TOKEN=
ML_REFRESH_TOKEN=

# INSTAGRAM BUSINESS INTEGRATION
INSTAGRAM_APP_ID=seu_app_id_instagram
INSTAGRAM_APP_SECRET=seu_app_secret_instagram
INSTAGRAM_ACCESS_TOKEN=
INSTAGRAM_PAGE_ID=
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=seu_webhook_verify_token

# BLING ERP INTEGRATION
BLING_CLIENT_ID=seu_client_id_bling
BLING_CLIENT_SECRET=seu_client_secret_bling
BLING_REDIRECT_URI=https://plataforma.app/oauth/bling/callback
BLING_ACCESS_TOKEN=
BLING_REFRESH_TOKEN=

# Z-API WHATSAPP INTEGRATION
ZAPI_INSTANCE_ID=sua_instancia_zapi
ZAPI_TOKEN=seu_token_zapi
ZAPI_WEBHOOK_URL=https://plataforma.app/webhooks/zapi

# MAKE.COM INTEGRATION
MAKE_API_TOKEN=seu_token_make
MAKE_TEAM_ID=seu_team_id_make
MAKE_ORGANIZATION_ID=seu_org_id_make

# EMAIL CONFIGURATION
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app_gmail
EMAIL_FROM=noreply@plataforma.app

# UPLOAD E STORAGE
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,xlsx,csv

# LOGS
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,https://plataforma.app
CORS_CREDENTIALS=true

# WEBHOOK CONFIGURATION
WEBHOOK_SECRET=sua_chave_secreta_webhooks
WEBHOOK_TIMEOUT=30000

# CRON JOBS
ENABLE_CRON_JOBS=true

# MONITORING
ENABLE_METRICS=true
METRICS_PORT=9464

# SECURITY
BCRYPT_ROUNDS=12
SESSION_SECRET=sua_chave_secreta_sessao

# DESENVOLVIMENTO
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false