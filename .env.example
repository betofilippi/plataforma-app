# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_32_characters_min
JWT_EXPIRES_IN=24h
ENCRYPT_KEY=your_32_character_encryption_key_here
