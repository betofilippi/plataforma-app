NODE_ENV=development
APP_NAME="NXT ERP System"
APP_URL=http://localhost:3000
API_VERSION=v1
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/nxt_erp_db
