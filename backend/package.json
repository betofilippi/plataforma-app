{
  "name": "@nxt/erp-backend",
  "version": "1.0.0",
  "description": "Backend Node.js + Express + TypeScript para ERP integrado NXT",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node start-dev.js",
    "dev:ts": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "echo 'No build step required for JavaScript files'",
    "start": "node start-dev.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integrations": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "knex migrate:latest",
    "db:migrate:rollback": "knex migrate:rollback",
    "db:migrate:make": "knex migrate:make",
    "db:seed": "knex seed:run",
    "db:seed:make": "knex seed:make",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:reset": "npm run db:migrate:rollback --all && npm run db:migrate && npm run db:seed",
    "db:backup": "node scripts/backup-db.js",
    "logs:clean": "node scripts/clean-logs.js",
    "webhooks:retry": "node scripts/retry-webhooks.js",
    "docker:build": "docker build -t nxt-erp-backend .",
    "docker:run": "docker run -p 3000:3000 nxt-erp-backend"
  },
  "keywords": [
    "erp",
    "backend",
    "nodejs",
    "typescript",
    "express",
    "supabase",
    "webhooks",
    "integrations"
  ],
  "author": "NXT Indústria e Comércio Ltda",
  "license": "PROPRIETARY",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "@supabase/supabase-js": "^2.38.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.4",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "nodemailer": "^7.0.4",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5",
    "pdf2pic": "^3.0.1",
    "qrcode": "^1.5.3",
    "crypto": "^1.0.1",
    "node-cron": "^3.0.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "ws": "^8.14.2",
    "socket.io": "^4.7.4",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^6.4.14",
    "@types/multer": "^1.4.11",
    "@types/ws": "^8.5.9",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "prettier": "^3.1.0",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nxt-industria/erp-backend.git"
  },
  "bugs": {
    "url": "https://github.com/nxt-industria/erp-backend/issues"
  },
  "homepage": "https://github.com/nxt-industria/erp-backend#readme"
}